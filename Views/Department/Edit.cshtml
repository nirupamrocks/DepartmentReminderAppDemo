@model DepartmentReminderAppDemo.Models.Department

@{
    ViewData["Title"] = "Edit Department";
}

<h1>Edit Department</h1>

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Logo" class="control-label">Logo</label>
        <input type="file" name="logoFile" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ParentDepartmentId" class="control-label">Parent Department</label>
        <select asp-for="ParentDepartmentId" class="form-control" asp-items="@(new SelectList(ViewBag.ParentDepartments, "Id", "Name"))">
            <option value="">None</option>
        </select>
        <span asp-validation-for="ParentDepartmentId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
