@model IEnumerable<DepartmentReminderAppDemo.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<h1>Departments</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Department</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>Logo</th>
            <th>@Html.DisplayNameFor(model => model.ParentDepartmentId)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>
                    @if (item.Logo != null)
                    {
                        <img src="data:image/png;base64,@Convert.ToBase64String(item.Logo)" alt="Logo" style="width: 50px; height: auto;" />
                    }
                    else
                    {
                        <span>No logo available</span>
                    }
                </td>
                <td>@item.ParentDepartment?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
